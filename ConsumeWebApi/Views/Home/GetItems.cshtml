@model IEnumerable<ConsumeWebApi.Models.Item>

@{
    ViewBag.Title = "Item list";

}


<div class="jumbotron">
    <h2>List of all items</h2>
</div>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.ItemName)

        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>


        <th>
            @Html.ActionLink("Add new Item", "additem", "Home", new {@class = "btn btn-primary btn-large"})
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)

            </td>
            <td> @Html.ActionLink("Delete", "DeleteItem", new {id = item.Id}, new {@class = "btn btn-primary btn-large"})</td>

        </tr>
    }

</table>